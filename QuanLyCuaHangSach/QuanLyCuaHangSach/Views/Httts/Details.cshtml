@model QuanLyCuaHangSach.Models.Httt

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/create_form.cshtml";
}

<header><h2>Thông tin Hình Thức Thanh Toán</h2></header>

        <form asp-action="Edit" class="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Idhttt" />
            <div class="input-box">
                <label class="control-label">Mã HTTT</label>
                <input asp-for="Mahttt" class="form-control" readonly/>
                <span asp-validation-for="Mahttt" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label class="control-label">Tên HTTT</label>
                <input asp-for="Tenhttt" class="form-control" readonly/>
                <span asp-validation-for="Tenhttt" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label class="control-label">Ghi chú</label>
                <input asp-for="Ghichu" class="form-control" readonly/>
                <span asp-validation-for="Ghichu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Ngân hàng</label>
                <input asp-for="NganhangidnganhangNavigation.Tennganhang" class="form-control" readonly/>
            </div>
            <div class="btns" style="padding-top:15px">
                <center><a asp-action="Edit" asp-route-id="@Model.Idhttt" style="color:white; text-decoration:none;">Sửa</a></center>
            </div>
            <div class="btns" style="padding-top:15px">
                <center><a asp-action="Index" style="color:white; text-decoration:none;">Quay về</a></center>
            </div>
        </form>