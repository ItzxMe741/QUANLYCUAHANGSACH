@model QuanLyCuaHangSach.Models.Khachhang

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/create_form.cshtml";
}

<header><h2>Sửa Khách Hàng</h2></header>
       <form asp-action="Edit" class="form" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Idkhachhang" />
            <div class="input-box">
                <label class="control-label">Mã khách hàng</label>
                <input asp-for="Makhachhang" class="form-control" readonly/>
                <span asp-validation-for="Makhachhang" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label class="control-label">Tên khách hàng</label>
                <input asp-for="Tenkhachhang" class="form-control" />
                <span asp-validation-for="Tenkhachhang" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label class="control-label">Địa chỉ</label>
                <input asp-for="Diachi" class="form-control" />
                <span asp-validation-for="Diachi" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label class="control-label">Số điện thoại</label>
                <input asp-for="Sdt" class="form-control" />
                <span asp-validation-for="Sdt" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label class="control-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label class="control-label">Password</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div>
                <label>Hình ảnh</label>
                <div class="custom-file">
                    <input title="Edit a employee image" asp-for="FrontImage" class="custom-file-input" 
                    onchange="document.getElementById('FrontImagePrv').src= window.URL.createObjectURL(this.files[0])">
                     <label class="custom-file-label" for="FrontImagePrv"></label>
                </div>
                <span asp-validation-for="FrontImage" class="text-danger"></span>
                <img id="FrontImagePrv" src="~/img/@Model.Image" alt="Image" width="150"
                height="150" style="border:1px; margin-top:20px; margin-left:120px; border-radius:50%; object-fit:cover"/>
            </div>

            <div class="input-box">
                <label class="control-label">Password</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="column">
                <div class="input-box">
                    <label class="control-label">Số tài khoản</label>
                    <input asp-for="Stk" class="form-control" />
                    <span asp-validation-for="Stk" class="text-danger"></span>
                </div>
                <div class="input-box">
                    <label class="control-label">Ngân hàng</label>
                    <div class="select-box">
                        <select asp-for="Nganhangidnganhang" class="form-control" asp-items="ViewBag.Nganhangidnganhang"></select>
                    </div>
                    <span asp-validation-for="Nganhangidnganhang" class="text-danger"></span>
                </div>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Cập nhật" class="btns" onclick="return ConfirmDelete(this);"/>
            </div>
            <div class="btns" style="padding-top:15px">
                <center><a asp-action="Index" style="color:white; text-decoration:none;">Quay về</a></center>
            </div>
        </form>

