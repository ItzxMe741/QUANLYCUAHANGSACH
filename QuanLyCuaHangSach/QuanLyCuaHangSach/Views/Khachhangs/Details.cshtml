@model QuanLyCuaHangSach.Models.Khachhang

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/create_form.cshtml";
}

<header><h2>Thông Tin Khách Hàng</h2></header>
        <form asp-action="Edit" class="form" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Idkhachhang" />
            <div class="input-box">
                <label class="control-label">Mã khách hàng</label>
                <input asp-for="Makhachhang" class="form-control" readonly/>
                <span asp-validation-for="Makhachhang" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label class="control-label">Tên khách hàng</label>
                <input asp-for="Tenkhachhang" class="form-control" readonly/>
                <span asp-validation-for="Tenkhachhang" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label class="control-label">Địa chỉ</label>
                <input asp-for="Diachi" class="form-control" readonly/>
                <span asp-validation-for="Diachi" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label class="control-label">Số điện thoại</label>
                <input asp-for="Sdt" class="form-control" readonly/>
                <span asp-validation-for="Sdt" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label class="control-label">Email</label>
                <input asp-for="Email" class="form-control" readonly/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label class="control-label">Password</label>
                <input asp-for="Password" class="form-control" readonly/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="column">
                <div class="input-box">
                    <label class="control-label">Số tài khoản</label>
                    <input asp-for="Stk" class="form-control" readonly/>
                    <span asp-validation-for="Stk" class="text-danger"></span>
                </div>
                <div class="input-box">
                    <label asp-for="Nganhangidnganhang" class="control-label"></label>
                    <input asp-for="NganhangidnganhangNavigation.Tennganhang" class="form-control" readonly/>
                    <span asp-validation-for="Nganhangidnganhang" class="text-danger"></span>
                </div>
            </div>
            
            <div class="btns" style="padding-top:15px">
                <center><a asp-action="Edit" asp-route-id="@Model.Idkhachhang" style="color:white; text-decoration:none;">Sửa</a></center>
            </div>
            <div class="btns" style="padding-top:15px">
                <center><a asp-action="Index" style="color:white; text-decoration:none;">Quay về</a></center>
            </div>
</form>