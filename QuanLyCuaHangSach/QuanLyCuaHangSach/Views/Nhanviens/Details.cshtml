@model QuanLyCuaHangSach.Models.Nhanvien

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/create_form.cshtml";
}

<header><h2>Thông Tin Nhân Viên</h2></header>

<form asp-action="Edit" class="form" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Idnhanvien" />
            <div class="input-box">
                <label class="control-label">Mã nhân viên</label>
                <input asp-for="Manhanvien" class="form-control" readonly/>
                <span asp-validation-for="Manhanvien" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label class="control-label">Tên nhân viên</label>
                <input asp-for="Tennhanvien" class="form-control" readonly/>
                <span asp-validation-for="Tennhanvien" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label class="control-label">Số điện thoại</label>
                <input asp-for="Sdt" class="form-control" readonly/>
                <span asp-validation-for="Sdt" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label class="control-label">Email</label>
                <input asp-for="Email" class="form-control" readonly/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label class="control-label">Ngày sinh</label>
                <input asp-for="Ngaysinh" class="form-control" readonly/>
                <span asp-validation-for="Ngaysinh" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label class="control-label">Password</label>
                <input asp-for="Password" class="form-control" readonly/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="btns" style="padding-top:15px">
                <center><a asp-action="Edit" asp-route-id="@Model.Idnhanvien" style="color:white; text-decoration:none;">Sửa</a></center>
            </div>
            <div class="btns" style="padding-top:15px">
                <center><a asp-action="Index" style="color:white; text-decoration:none;">Quay về</a></center>
            </div>
        </form>
