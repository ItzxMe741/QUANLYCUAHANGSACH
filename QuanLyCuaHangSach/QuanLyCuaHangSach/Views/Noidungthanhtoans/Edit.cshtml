@model QuanLyCuaHangSach.Models.Noidungthanhtoan

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/create_form.cshtml";
    Phieuthanhtoantienmua ptttm = TempData["phieuthanhtoantienmua"] as Phieuthanhtoantienmua;
}

<header><h2>Sửa Nội Dung Thanh Toán</h2></header>
        <form asp-action="Edit" class="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Idndtt" />

            
            <select asp-for="Phieuthanhtoantienmuaidptttm" class="form-control" asp-items="ViewBag.Phieuthanhtoantienmuaidptttm" hidden></select>

            <div class="input-box">
                <label class="control-label">Phiếu đặt hàng</label>
                <div class="select-box">
                    <select asp-for="Phieudathangmuaidpdhm" class="form-control" asp-items="ViewBag.Phieudathangmuaidpdhm"></select>
                </div>
                <span asp-validation-for="Phieudathangmuaidpdhm" class="text-danger"></span>
            </div>

             <div class="input-box">
                <label class="control-label">Số tiền thanh toán</label>
                <input asp-for="Sotienthanhtoan" class="form-control" oninput="formatCurrency(this)"/>
                <span asp-validation-for="Sotienthanhtoan" class="text-danger"></span>
            </div>

             <script>
                function formatCurrency(input) {
                    var value = input.value.replace(/\D/g, '');
                    var formatter = new Intl.NumberFormat('en-US');

                    // Kiểm tra giá trị nhập vào
                    if (value < 0) {
                        // Xử lý lỗi tại đây, ví dụ: hiển thị thông báo lỗi
                        alert("Giá nhập không hợp lệ. Vui lòng nhập lại!");
                        input.value = ""; // Xóa giá trị nhập vào
                    } else {
                        input.value = formatter.format(value);
                    }
                }
            </script>

            <div>
                <input type="submit" value="Cập nhật" class="btns" onclick="return ConfirmDelete(this);"/>
            </div>
            <hr />
            <div class="btns" style="padding-top:15px">
                <center>
                    <a style="color:white; text-decoration:none;" href="@Url.Action("Index", "Noidungthanhtoans", new { Idptttm = ptttm.Idptttm })">Quay về</a>
                </center>
            </div>
        </form>


