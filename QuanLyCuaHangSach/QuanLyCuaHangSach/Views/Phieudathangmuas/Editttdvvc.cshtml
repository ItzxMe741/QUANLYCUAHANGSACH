@model QuanLyCuaHangSach.Models.Phieudathangmua

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/create_form.cshtml";
}

<header><h2>Cập Nhật Trạng Thái</h2></header>
        <form asp-action="Editttdvvc" class="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Idpdhm" />
            <div class="input-box">
                <label class="control-label">Số phiếu đặt</label>
                <input asp-for="Sopdhm" class="form-control" readonly/>
                <span asp-validation-for="Sopdhm" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label class="control-label">Ngày đặt</label>
                <input asp-for="Ngaydat" class="form-control" type="date" readonly/>
                <span asp-validation-for="Ngaydat" class="text-danger"></span>
            </div>

            <input asp-for="Ngaytiepnhan" class="form-control"  type="date" hidden/>
            <span asp-validation-for="Ngaytiepnhan" class="text-danger"></span>

            <div class="input-box">
                <label class="control-label" >Ngày giao hàng</label>
                <input asp-for="Ngaygiaohang" class="form-control" type="date" />
                <span asp-validation-for="Ngaygiaohang" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label class="control-label">Ghi chú</label>
                <input asp-for="Ghichu" class="form-control" />
                <span asp-validation-for="Ghichu" class="text-danger"></span>
            </div>

            <select asp-for="Nhacungcapidncc" class ="form-control" asp-items="ViewBag.Nhacungcapidncc" hidden></select>

            <select asp-for="Nhanvienidnhanvien" class ="form-control" asp-items="ViewBag.Nhanvienidnhanvien" hidden></select>

            <div class="input-box">
                <label class="control-label">Trạng thái</label>
                <div class="select-box">
                    <select asp-for="Trangthaiidtt" class ="form-control" asp-items="ViewBag.Trangthaiidtt"></select>
                </div>
            </div>

            <select asp-for="Donvivanchuyeniddvvc" class ="form-control" asp-items="ViewBag.Donvivanchuyeniddvvc" hidden></select>

            <div class="form-group">
                <input type="submit" value="Cập nhật" class="btns" onclick="return ConfirmDelete(this);" />
            </div>
            <div class="btns" style="padding-top:15px">
                <center><a asp-action="Capnhattrangthaidvvc" style="color:white; text-decoration:none;">Quay về</a></center>
            </div>
        </form>
