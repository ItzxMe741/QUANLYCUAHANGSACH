@model QuanLyCuaHangSach.Models.Nganhang

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/create_form.cshtml";
}

<header>Sửa Ngân Hàng</header>

        <form asp-action="Edit" class="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Idnganhang" />
            <div class="input-box">
                <label class="control-label">Mã ngân hàng</label>
                <input asp-for="Manganhang" class="form-control" readonly/>
                <span asp-validation-for="Manganhang" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label class="control-label">Tên ngân hàng</label>
                <input asp-for="Tennganhang" class="form-control" />
                <span asp-validation-for="Tennganhang" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label class="control-label">Ghi chú</label>
                <input asp-for="Ghichu" class="form-control" />
                <span asp-validation-for="Ghichu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cập nhật" class="btns" onclick="return ConfirmDelete(this);"/>
            </div>
            <div class="btns" style="padding-top:15px">
                <center><a asp-action="Index" style="color:white; text-decoration:none;">Quay về</a></center>
            </div>
        </form>
