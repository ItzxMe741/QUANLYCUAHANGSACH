@model QuanLyCuaHangSach.Models.Phieudathangban

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/create_form.cshtml";
}

<header><h2>Sửa Phiếu Đặt Hàng</h2></header>
        <form asp-action="Edit" class="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Idpdhb" />
            <div class="input-box">
                <label class="control-label">Số phiếu đặt</label>
                <input asp-for="Sopdhb" class="form-control" readonly/>
                <span asp-validation-for="Sopdhb" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label class="control-label">Ngày đặt</label>
                <input asp-for="Ngaydat" class="form-control" type="date"/>
                <span asp-validation-for="Ngaydat" class="text-danger"></span>
            </div>

            <input asp-for="Ngaytiepnhan" class="form-control" type="date" hidden/>

            <input asp-for="Ngaygiaohang" class="form-control" type="date" hidden/>

            <div class="input-box">
                <label class="control-label">Ghi chú</label>
                <input asp-for="Ghichu" class="form-control" />
                <span asp-validation-for="Ghichu" class="text-danger"></span>
            </div>

            <div class="input-box">
                <label class="control-label">Khách hàng</label>
                <div class="select-box">
                    <select asp-for="Khachhangidkhachhang" class ="form-control" asp-items="ViewBag.Khachhangidkhachhang"></select>
                </div>
            </div>
            <div class="input-box">
                <label class="control-label">Nhân viên tiếp nhận</label>
                <div class="select-box">
                    <select asp-for="Nhanvienidnhanvien" class ="form-control" asp-items="ViewBag.Nhanvienidnhanvien"></select>
                </div>
            </div>
            <div class="input-box">
                <label class="control-label">Trạng thái</label>
                <div class="select-box">
                    <select asp-for="Trangthaiidtt" class ="form-control" asp-items="ViewBag.Trangthaiidtt"></select>
                </div>
            </div>
            <div class="input-box">
                <label class="control-label">Đơn vị vận chuyển</label>
                <div class="select-box">
                    <select asp-for="Donvivanchuyeniddvvc" class ="form-control" asp-items="ViewBag.Donvivanchuyeniddvvc"></select>
                </div>
            </div>
            <div>
                <input type="submit" value="Cập nhật" class="btns" onclick="return ConfirmDelete(this);"/>
            </div>
            <hr />
            <div class="btns" style="padding-top:15px">
                <center><a asp-action="Index" style="color:white; text-decoration:none;">Quay về</a></center>
            </div>
        </form>


