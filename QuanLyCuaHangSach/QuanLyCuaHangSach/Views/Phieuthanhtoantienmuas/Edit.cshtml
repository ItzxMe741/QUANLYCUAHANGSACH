@model QuanLyCuaHangSach.Models.Phieuthanhtoantienmua

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/create_form.cshtml";
}

<header><h2>Sửa Phiếu Thanh Toán</h2></header>
        <form asp-action="Edit" class="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Idptttm" />
            <div class="input-box">
                <label class="control-label">Số phiếu thanh toán</label>
                <input asp-for="Soptttm" class="form-control" readonly/>
                <span asp-validation-for="Soptttm" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label class="control-label">Ngày thanh toán</label>
                <input asp-for="Ngaythanhtoan" class="form-control" type="date"/>
                <span asp-validation-for="Ngaythanhtoan" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label class="control-label">Hình thức thanh toán</label>
                <div class="select-box">
                    <select asp-for="Htttidhttt" class ="form-control" asp-items="ViewBag.Htttidhttt"></select>
                </div>
            </div>
            <div class="input-box">
                <label class="control-label">Nhân viên phụ trách</label>
                <div class="select-box">
                    <select asp-for="Nhanvienidnhanvien" class ="form-control" asp-items="ViewBag.Nhanvienidnhanvien"></select>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Cập nhật" class="btns" onclick="return ConfirmDelete(this);" />
            </div>
            <div class="btns" style="padding-top:15px">
                <center><a asp-action="Index" style="color:white; text-decoration:none;">Quay về</a></center>
            </div>
        </form>

