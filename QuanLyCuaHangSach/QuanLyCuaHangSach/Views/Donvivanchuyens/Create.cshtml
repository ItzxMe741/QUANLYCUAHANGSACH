@model QuanLyCuaHangSach.Models.Donvivanchuyen

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/create_form.cshtml";
}



<header><h2>Thêm Đơn Vị Vận Chuyển</h2></header>
        <form asp-action="Create" class="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="input-box">
        <label class="control-label">Mã ĐVVC</label>
                <input asp-for="Madvvc" class="form-control" />
                <span asp-validation-for="Madvvc" class="text-danger"></span>
            </div>
        <div class="input-box">
                <label class="control-label">Tên ĐVVC</label>
                <input asp-for="Tendvvc" class="form-control" />
                <span asp-validation-for="Tendvvc" class="text-danger"></span>
            </div>
        <div class="input-box">
                <label class="control-label">Địa chỉ</label>
                <input asp-for="Diachi" class="form-control" />
                <span asp-validation-for="Diachi" class="text-danger"></span>
            </div>
        <div class="input-box">
                <label class="control-label">Số điện thoại</label>
                <input asp-for="Sdt" class="form-control" />
                <span asp-validation-for="Sdt" class="text-danger"></span>
            </div>
        <div class="input-box">
                <label class="control-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        <div class="input-box">
                <label class="control-label">Password</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        <div class="input-box">
                <label class="control-label">Ghi chú</label>
                <input asp-for="Ghichu" class="form-control" />
                <span asp-validation-for="Ghichu" class="text-danger"></span>
            </div>
            <div>
                <input type="submit" value="Lưu" class="btns" />
            </div>
            <hr />
            <div class="btns" style="padding-top:15px">
                <center><a asp-action="Index" style="color:white; text-decoration:none;">Quay về</a></center>
            </div>
        </form>

