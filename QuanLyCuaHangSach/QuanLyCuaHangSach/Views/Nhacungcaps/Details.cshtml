@model QuanLyCuaHangSach.Models.Nhacungcap

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/create_form.cshtml";
}

<header><h2>Thông Tin Nhà Cung Cấp</h2></header>
        <form asp-action="Edit" class="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Idncc" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="input-box">
                <label class="control-label">Mã nhà cung cấp</label>
                <input asp-for="Mancc" class="form-control" readonly/>
                <span asp-validation-for="Mancc" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label class="control-label">Tên nhà cung cấp</label>
                <input asp-for="Tenncc" class="form-control" readonly/>
                <span asp-validation-for="Tenncc" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label class="control-label">Địa chỉ</label>
                <input asp-for="Diachi" class="form-control" readonly/>
                <span asp-validation-for="Diachi" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label class="control-label">Số điện thoại</label>
                <input asp-for="Sdt" class="form-control" readonly/>
                <span asp-validation-for="Sdt" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label class="control-label">Mã số thuế</label>
                <input asp-for="Masothue" class="form-control" readonly/>
                <span asp-validation-for="Masothue" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label class="control-label">Email</label>
                <input asp-for="Email" class="form-control" readonly/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label class="control-label">Ghi chú</label>
                <input asp-for="Ghichu" class="form-control" readonly/>
                <span asp-validation-for="Ghichu" class="text-danger"></span>
            </div>
            <div class="column">
                <div class="input-box">
                    <label class="control-label">Số tài khoản</label>
                    <input asp-for="Stk" class="form-control" readonly/>
                    <span asp-validation-for="Stk" class="text-danger"></span>
                </div>
                <div class="input-box">
                    <label class="control-label">Ngân hàng</label>
                    <input asp-for="NganhangidnganhangNavigation.Tennganhang" class="form-control" readonly/>
                </div>
            </div>
            <div class="btns" style="padding-top:15px">
                <center><a asp-action="Edit" asp-route-id="@Model.Idncc" style="color:white; text-decoration:none;">Sửa</a></center>
            </div>
            <div class="btns" style="padding-top:15px">
                <center><a asp-action="Index" style="color:white; text-decoration:none;">Quay về</a></center>
            </div>
        </form>
