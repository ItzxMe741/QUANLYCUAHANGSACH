@model QuanLyCuaHangSach.Models.Sach

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/create_form.cshtml";
}

<header><h2>Sửa Sách</h2></header>

        <form asp-action="Edit" class="form" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Idsach" />
            <div class="input-box">
                <label class="control-label">Mã sách</label>
                <input asp-for="Masach" class="form-control" readonly/>
                <span asp-validation-for="Masach" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label class="control-label">Tên sách</label>
                <input asp-for="Tensach" class="form-control" />
                <span asp-validation-for="Tensach" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label class="control-label">Ngày xuất bản</label>
                <input asp-for="Ngayxb" class="form-control" type="date"/>
                <span asp-validation-for="Ngayxb" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label class="control-label">Lần xuất bản</label>
                <input asp-for="Lanxb" class="form-control" />
                <span asp-validation-for="Lanxb" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label class="control-label">Ghi chú</label>
                <input asp-for="Ghichu" class="form-control" />
                <span asp-validation-for="Ghichu" class="text-danger"></span>
            </div>
            <div>
                <label>Hình ảnh</label>
                <div class="custom-file">
                    <input title="Edit a employee image" asp-for="FrontImage" class="custom-file-input" 
                    onchange="document.getElementById('FrontImagePrv').src= window.URL.createObjectURL(this.files[0])">
                     <label class="custom-file-label" for="FrontImagePrv"></label>
                </div>
                <span asp-validation-for="FrontImage" class="text-danger"></span>
                <img id="FrontImagePrv" src="~/img/@Model.Image" alt="Image" width="150"
                height="150" style="border:1px; margin-top:20px; margin-left:120px; border-radius:50%; object-fit:cover"/>
            </div>
            <div class="input-box">
                <label class="control-label">Loại sách</label>
                <div class="select-box">
                    <select asp-for="Loaisachidloai" class="form-control" asp-items="ViewBag.Loaisachidloai"></select>
                </div>
            </div>
            <div class="input-box">
                <label class="control-label">Nhà xuất bản</label>
                <div class="select-box">
                    <select asp-for="Nhaxuatbanidnxb" class="form-control" asp-items="ViewBag.Nhaxuatbanidnxb"></select>
                </div>
            </div>
            <div class="input-box">
            <label class="control-label">Tác giả</label>
                <div class="select-box">
                    <select asp-for="Tacgiaidtacgia" class="form-control" asp-items="ViewBag.Tacgiaidtacgia"></select>
                </div>
            </div>
            <div class="input-box">
                <div class="select-box">
                    <label class="control-label">Ngôn ngữ</label>
                    <select asp-for="Ngonnguidngonngu" class="form-control" asp-items="ViewBag.Ngonnguidngonngu"></select>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Cập nhật" class="btns" onclick="return ConfirmDelete(this);" />
            </div>
            <div class="btns" style="padding-top:15px">
                <center><a asp-action="Index" style="color:white; text-decoration:none;">Quay về</a></center>
            </div>
        </form>