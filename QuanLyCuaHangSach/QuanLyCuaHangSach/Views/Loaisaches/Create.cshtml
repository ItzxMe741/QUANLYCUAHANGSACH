@model QuanLyCuaHangSach.Models.Loaisach

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/create_form.cshtml";
}

<header><h2>Thêm Loại Sách</h2></header>

        <form asp-action="Create" class="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="input-box">
                <label class="control-label">Mã loại sách</label>
                <input asp-for="Maloai" class="form-control" />
                <span asp-validation-for="Maloai" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label class="control-label">Tên loại sách</label>
                <input asp-for="Tenloai" class="form-control" />
                <span asp-validation-for="Tenloai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btns" />
            </div>
            <div class="btns" style="padding-top:15px">
                <center><a asp-action="Index" style="color:white; text-decoration:none;">Quay về</a></center>
            </div>
        </form>