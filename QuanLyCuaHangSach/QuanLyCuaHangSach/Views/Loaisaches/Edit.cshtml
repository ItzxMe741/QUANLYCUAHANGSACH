@model QuanLyCuaHangSach.Models.Loaisach

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/create_form.cshtml";
}

<header><h2>Sửa Loại Sách</h2></header>
        <form asp-action="Edit" class="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Idloai" />
            <div class="input-box">
                <label class="control-label">Mã loại</label>
                <input asp-for="Maloai" class="form-control" readonly/>
                <span asp-validation-for="Maloai" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label class="control-label">Tên loại</label>
                <input asp-for="Tenloai" class="form-control" />
                <span asp-validation-for="Tenloai" class="text-danger"></span>
            </div>
            <div class="form-group">
        <input type="submit" value="Cập nhật" class="btns" onclick="return ConfirmDelete(this);"/>
            </div>
            <div class="btns" style="padding-top:15px">
                <center><a asp-action="Index" style="color:white; text-decoration:none;">Quay về</a></center>
            </div>
        </form>

