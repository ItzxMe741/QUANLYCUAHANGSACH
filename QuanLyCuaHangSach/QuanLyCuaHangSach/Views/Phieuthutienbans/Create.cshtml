@model QuanLyCuaHangSach.Models.Phieuthutienban

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/create_form.cshtml";
}

<header><h2>Thêm Phiếu Thu Tiền</h2></header>
        <form asp-action="Create" class="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @{
                var idset = ViewData["id"];
            }

            <div class="input-box">
                <label class="control-label">Số phiếu thu tiền</label>
                <input asp-for="Sopttb" class="form-control" value="@idset" readonly/>
                <span asp-validation-for="Sopttb" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label class="control-label">Ngày thu tiền</label>
                <input asp-for="Ngaythutien" class="form-control" type="date"/>
                <span asp-validation-for="Ngaythutien" class="text-danger"></span>
            </div>

            <div class="input-box">
                <label class="control-label">Nhân viên</label>
                <div class="select-box">
                    <select asp-for="Nhanvienidnhanvien" class ="form-control" asp-items="ViewBag.Nhanvienidnhanvien"></select>
                </div>
            </div>
            <div class="input-box">
                <label class="control-label">Hình thức thanh toán</label>
                <div class="select-box">
                    <select asp-for="Htttidhttt" class ="form-control" asp-items="ViewBag.Htttidhttt"></select>
                </div>
            </div>
            <div>
                <input type="submit" value="Lưu" class="btns" />
            </div>
            <hr />
            <div class="btns" style="padding-top:15px">
                <center><a asp-action="Index" style="color:white; text-decoration:none;">Quay về</a></center>
            </div>
        </form>
